{
  "manifest_version": 3,
  "name": "CAU IGEUL - 본문 추출 리더 모드",
  "description": "네이버 뉴스, 스포츠, 블로그, 나무위키 등에서 본문 텍스트를 추출하고 가독성 있는 리더모드로 표시합니다.",
  "version": "1.0.0",
  "permissions": ["scripting", "activeTab", "storage", "identity"],
  "oauth2": {
    "client_id": "119171161159-8t41qnvr6avjn0729fdi89p11dbqt1g8.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "action": {
    "default_title": "CAU IGEUL 실행",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/PeachMarket-Regular.ttf",
        "toggleToolbar.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.firebaseio.com https://www.googleapis.com https://securetoken.googleapis.com https://identitytoolkit.googleapis.com https://us-central1-igeul-66a16.cloudfunctions.net;"
  }
}